{
    "manifest_version": 3,
    "name": "AI Code Reviewer",
    "version": "1.0",
    "description": "Analyze selected code using AI",
    "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["https://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "ai.jpg"
    }
  }
  